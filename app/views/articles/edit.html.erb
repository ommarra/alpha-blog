<h1>
  Edit existing article
</h1>

<% if @article.errors.any? %>
<h2> errors are shown below </h2>
<ul>
  <li> <% @article.errors.full_messages.each do |msg| %> </li>li
    <%= msg %>
  <% end %>
</ul>
<% end %>

<%= form_for @article do |x| %>
<p>
  <%= x.label :title %> <br/>
  <%= x.text_field :title %>
</p>
<p>
  <%= x.label :description %> <br/>
  <%= x.text_area :description %>
</p>
<p>
  <%= x.submit %>
</p>
<% end %>

<%= link_to "Show all articles", articles_path %>